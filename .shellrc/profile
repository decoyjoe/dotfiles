# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

login_d="$HOME/.shellrc/login.d"

# Execute login shell items first
if [ -d "$login_d" ]; then
  if [ -n "$ZSH_VERSION" ]; then
    # zsh: (N) ignores patterns with no matches â€” safe and quiet
    files=("$login_d"/*.login(N) "$login_d"/*.local(N))
  else
    # bash and others: globbing does not error by default if no matches found
    files=("$login_d"/*.login "$login_d"/*.local)
  fi

  for file in "${files[@]}"; do
    [ -f "$file" ] || continue
    source "$file"
  done
fi

# Now execute interactive shell items, per shell

# if running bash
if [ -n "$BASH_VERSION" ]; then
    if [ -f "$HOME/.bashrc" ]; then
      source "$HOME/.bashrc"
    fi
fi

# if running zsh
# Do nothing; zsh automatically sources .zshrc on its own
